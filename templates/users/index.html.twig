{% extends 'base.html.twig' %}

{% block title %}Users list{% endblock %}

{% block body %}
    <h1>Registered Users</h1>

    {% if users is empty %}
        <p>No users found.</p>
    {% else %}
        <ul>
            {% for user in users %}
                <li>
                    <strong>{{ user.username }}</strong>
                    {% if user.registrationDate %}
                        — registered on {{ user.registrationDate|date('Y-m-d') }}
                    {% else %}
                        — <em>registration date unknown</em>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}

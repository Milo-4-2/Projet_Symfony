{% extends 'base.html.twig' %}

{% block title %}{{ artist[0].name }}{% endblock %}

{% block body %}
    <style>
        img {
            width: 300px;
            height: 300px;
        }
    </style>

    <div>
        <h1>{{ artist[0].name }}</h1>

        {% if artist[0].image %}
            <img
                    src="{{ asset('uploads/images/' ~ artist[0].image) }}"
                    alt="{{ artist[0].name }}"
            >
        {% endif %}

        <p>{{ artist[0].description }}</p>

        <h2>Featured Events</h2>

        {% if artist|length > 0 and artist[0].eventId is not null %}
            <ul>
                {% for row in artist %}
                    <li>
                        <strong>{{ row.name }}</strong> â€” {{ row.date|date('F j, Y') }}
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p><em>No events found for this artist.</em></p>
        {% endif %}
    </div>
{% endblock %}

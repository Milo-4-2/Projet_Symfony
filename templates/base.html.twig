<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>{% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li><a href="{{ path('app_home_page') }}">Home</a></li>

                    <li><a href="{{ path('app_artists') }}">Artists</a></li>

                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('app_users') }}">Users</a></li>
                        <li><a href="{{ path('app_new_artist') }}">New artist</a></li>
                    {% endif %}

                    {% if app.user %}
                        <li><a href="{{ path('app_logout') }}">Logout</a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}">Login</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
